<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Gestion des locations</title>


        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/header.css') }}">
            <link rel="stylesheet" href="{{ asset('css/footer.css') }}">
            <link rel="stylesheet" href="{{ asset('css/locataires/style.css') }}">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
            <script src="https://kit.fontawesome.com/d8cf10d130.js" crossorigin="anonymous"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% include 'includes/_header.html.twig' %}
            {% block content %}
                {% if is_granted('ROLE_OWNER') %}
                    <p>Bonjour {{ app.user.firstname }} {{ app.user.name }} !</p>
                    <p>Vous pouvez :</p>
                    <a href="{{ path('mandataire') }}">Gérer les mandataires</a>
                    <br>
                    <a href="{{ path('locataires') }}">Gérer les locataires</a>
                    <br>
                    <a href="{{ path('bien') }}">Gérer les biens</a>
                {% elseif is_granted('ROLE_REPRESENTATIVE') %}
                    <p>Bonjour {{ app.user.firstname }} {{ app.user.name }} !</p>
                {% elseif is_granted('ROLE_TENANT') %}
                    <p>Bonjour {{ app.user.firstname }} {{ app.user.name }} !</p>
                    {% for rent in rent %}
                        {{ rent.id }}
                        {{ rent.getArrivalDate|date('d/F/Y') }}
                        <br>
                    {% endfor %}
                {% else %}
                    <a href="{{ path('login') }}">Connexion</a>
                {% endif %}
            {% endblock %}
            {% include 'includes/_footer.html.twig' %}
        {% endblock %}
    </body>
</html>
