{% extends 'base.html.twig' %}

{% block content %}

    <div>
        <h2>
            Ajout des locataires
        </h2>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-xs-12">
                {{ form_start(form) }}
                {{ form_row(form.email) }}
                {{ form_row(form.plainPassword) }}
            </div>
            <div class="col-lg-6 col-xs-12">
                {{ form_row(form.name) }}
                {{ form_row(form.firstname) }}
                {{ form_row(form.submit, { 'label': 'Ajouter' }) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    

{% endblock %}