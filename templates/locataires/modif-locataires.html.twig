{% extends 'base.html.twig' %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-6 col-xs-12">
                <h2 class="title-brown">{{ user.firstname }} {{ user.name }}</h2>
                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.firstname) }}
                {{ form_row(form.email) }}
                {{ form_row(form.plainPassword) }}
                {{ form_row(form.submit, { 'label': 'Modifier' }) }}
                {{ form_end(form) }}
            </div>
            <div class="col-md-6 col-lg-6 col-xs-12">
                <h2 class="title-brown">Liste des locations <a type="button" class="btn btn-success" href="{{ path('ajout_une_location')}}">Ajouter une location</a></h2>
                <h2></h2>
                {% for rent in rent %}
                    <p>{{ rent.id }}</p>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}