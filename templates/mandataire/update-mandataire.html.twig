            </div>
            <div class="col-lg-6 col-xs-12">
                {{ form_row(form.plainPassword) }}
                {{ form_end(form) }}
            </div>
        </div>
        <div>
            <h2>{{ user.firstname }} {{ user.name }} poss√®de {{ bien | length }}  biens</h2>
            {% for bien in bien %}
                <p>{{ bien.name }}</p>
